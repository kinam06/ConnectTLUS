<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/noti_img"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:src="@drawable/logo"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"

        android:layout_toRightOf="@id/noti_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="Thông báo 1"
            android:textSize="17dp"
            android:textStyle="bold"
            android:paddingLeft="12dp"
            android:textColor="#000"
            android:id="@+id/txtnoti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Người gửi: Thầy"
            android:textSize="15dp"
            android:paddingLeft="12dp"
            android:textColor="#676767"
            android:id="@+id/txtnotius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"/>
        <TextView
            android:text="Đây là thông báo số 1"
            android:textSize="15dp"
            android:paddingLeft="12dp"
            android:layout_marginBottom="5dp"
            android:textColor="#676767"
            android:id="@+id/txtnotides"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/notitime"
        android:paddingRight="10dp"
        android:src="@drawable/notii"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-5dp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20:30 13/11/2020"/>
    <View
        android:background="#aeb0af"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"/>
</RelativeLayout>